<% layout('layouts/boilerplate') %>
    <div class="row d-flex justify-content-center align-items-center mt-5">
        <div class="col-6">
            <div class="card p">
                <div class="card-body">
                    <div class="card-title display-6">Nýskráning</div>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Notendanafn:</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Lykilorð:</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="email">Tölvupóstur:</label>
                                    <input class="form-control" type="email" id="email" name="email" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <button class="btn btn-success mt-3">Nýskrá</button>
                    </form>
                </div>
            </div>
        </div>